{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "gamma-color-picker",
  "title": "Gamma Color Picker",
  "description": "Find Gamma brand colors",
  "icon": "icon.png",
  "author": "jordan",
  "contributors": [
    "otakustay",
    "EmersonEmerson",
    "pernielsentikaer",
    "arronhunt",
    "kvdo2",
    "thomaslombart",
    "litomore",
    "samuelkraft",
    "ridemountainpig",
    "xilopaint",
    "anwarulislam"
  ],
  "categories": [
    "Design Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "pick-color",
      "title": "Pick Gamma Color",
      "description": "Pick a color on your desktop",
      "mode": "no-view",
      "preferences": [
        {
          "name": "showColorName",
          "title": "Show color name after picking",
          "description": "Show the name of the picked color after picking",
          "type": "checkbox",
          "label": "Show",
          "default": false,
          "required": false
        }
      ]
    },
    {
      "name": "color-names",
      "title": "Search Gamma Colors",
      "description": "Get the name of a color",
      "mode": "view",
      "arguments": [
        {
          "name": "searchText",
          "placeholder": "Enter color hex",
          "type": "text",
          "required": false
        }
      ],
      "preferences": []
    }
  ],
  "preferences": [],
  "dependencies": {
    "@raycast/api": "^1.99.4",
    "@raycast/utils": "^1.19.1",
    "color-namer": "^1.4.0",
    "colorjs.io": "^0.5.2",
    "lodash": "^4.17.21",
    "raycast-cross-extension": "^0.2.3"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/color-namer": "^1.3.3",
    "@types/lodash": "^4.17.17",
    "@types/node": "^22.15.29",
    "@types/react": "^19.1.6",
    "eslint": "^9.28.0",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "typescript": "^5.8.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "pull": "ray pull-contributions",
    "publish": "ray publish"
  },
  "platforms": [
    "macOS"
  ]
}
